<div>
  <h1 class="font-bold text-4xl">Admin::Brands#new</h1>
  <p>Find me in app/views/admin/brands/new.html.erb</p>

  <div class="max-w-xl">
    <%= form_with(model: @brand, url: admin_brands_path, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter brand name" %>
      </div>
      <div class="mb-6">
        <%= form.label :website, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :website, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter brand website" %>
      </div>
      <div class="flex items-center justify-start">
        <%= form.submit "Save", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
